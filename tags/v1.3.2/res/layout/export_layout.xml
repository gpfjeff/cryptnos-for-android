<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5sp">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="vertical"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:id="@+id/layoutExport"
	    >
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/labelExportFile"
				android:text="@string/export_file_label"></TextView>
			<Button android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/btnExportPickPath"
				android:text="@string/export_file_pick_path_button_label"></Button>
			<EditText android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/txtExportFile"
				android:autoLink="none"
				android:ellipsize="none"
				android:hint="@string/export_file_hint"
				android:autoText="false"></EditText>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/labelPassphrase1"
				android:text="@string/export_password1_label"></TextView>
			<EditText android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/txtPassphrase1"
				android:password="true"
				android:ellipsize="none"
				android:saveEnabled="false"
				android:hint="@string/export_password1_hint"></EditText>
			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/labelPassphrase2"
				android:text="@string/export_password2_label"></TextView>
			<EditText android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/txtPassphrase2"
				android:password="true"
				android:ellipsize="none"
				android:saveEnabled="false"
				android:hint="@string/export_password2_hint"></EditText>
			<Button android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/btnPickSites"
				android:text="@string/export_pick_sites_button_label"></Button>
			<Button android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:id="@+id/btnExport"
				android:text="@string/export_export_button_label"></Button>
	</LinearLayout>
</ScrollView>